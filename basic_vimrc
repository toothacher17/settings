set number " 显示行号
set ruler " 打开状态栏标尺
set showcmd " 状态栏显示当前所执行命令
set cursorline "突出显示当前行
set history=600 "历史记录

set autoindent " 设置智能缩进
set smartindent

set ignorecase smartcase " 搜索忽略大小写
set incsearch "关闭显示搜索对内容
set hlsearch " 高亮搜索内容

set showmatch " 显示匹配括号

set ts=4
set expandtab
set shiftwidth=4
set tabstop=4 " 突出显示当前行 "
set softtabstop=4

set fileencoding=utf-8

syntax on
